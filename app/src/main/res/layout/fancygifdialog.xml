<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:cardBackgroundColor="@android:color/white" app:cardCornerRadius="10dp" app:cardElevation="16dp" app:cardUseCompatPadding="true">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/relativelayout1" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <pl.droidsonroids.gif.GifImageView android:id="@+id/gifImageView" android:layout_width="match_parent" android:layout_height="140dp" android:src="@drawable/gif1" android:scaleType="centerCrop" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/relativelayout1">
                <RelativeLayout android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="16dp" android:textColor="#000000" android:gravity="center" android:id="@+id/title" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Granny eating chocolate dialog box" android:textAlignment="center"/>
                    <TextView android:textSize="14dp" android:gravity="center" android:id="@+id/message" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="This is a granny eating chocolate dialog box. This library is used to help you easily create fancy gify dialog." android:layout_below="@+id/title" android:textAlignment="center"/>
                    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:paddingBottom="12dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:weightSum="100" android:layout_below="@+id/message">
                        <Button android:textColor="#ffffff" android:id="@+id/negativeBtn" android:background="@drawable/curved_shape2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_weight="50" android:textAllCaps="false"/>
                        <Button android:textColor="#ffffff" android:id="@+id/positiveBtn" android:background="@drawable/curved_shape" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_weight="50" android:textAllCaps="false"/>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
