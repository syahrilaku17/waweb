<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_stlish_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/lyt_buttons"
        android:padding="10dp"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_stlish_text"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#51000000" />

    <RelativeLayout
        android:id="@+id/lyt_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/lyt_whatsapp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle">

            <ImageView
                android:id="@+id/iv_whatsapp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/whatsapp"
                android:padding="2dp"
                app:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_copy"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/lyt_whatsapp"
            android:background="@drawable/circle">

            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/ic_content_copy_black_24dp"
                app:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toRightOf="@+id/lyt_copy"
            android:background="@drawable/circle">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/ic_share_black_24dp"
                app:tint="@color/white" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
